<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AppUserAwardListMapper">
	
	<!--表名 -->
	<sql id="tableName">
		SYS_APP_USER_AWARD_LIST
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		CODE_ID,	
		USER_ID,	
		AWARD_TYPE,	
		AWARD_NUM,	
		REMARK,	
		IMEI_ID,	
		CREATE_TIME,	
		AWARD_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{CODE_ID},	
		#{USER_ID},	
		#{AWARD_TYPE},	
		#{AWARD_NUM},	
		#{REMARK},	
		#{IMEI_ID},	
		now(),	
		#{AWARD_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			AWARD_ID = #{AWARD_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			CODE_ID = #{CODE_ID},
			USER_ID = #{USER_ID},
			AWARD_TYPE = #{AWARD_TYPE},
			AWARD_NUM = #{AWARD_NUM},
			REMARK = #{REMARK},
			IMEI_ID = #{IMEI_ID},
			CREATE_TIME = now();
		where 
		AWARD_ID = #{AWARD_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			AWARD_ID = #{AWARD_ID}
	</select>
	
	
	<select id="findUserAwardByUserId" parameterType="String" resultType="java.lang.Integer">
		select 
			count(AWARD_ID)
		from 
		<include refid="tableName"></include>
		where USER_ID = #{USER_ID} AND AWARD_TYPE='2'
			
	</select>
	
	<select id="findUserAwardByAppId" parameterType="String" resultType="java.lang.Integer">
		select 
			count(AWARD_ID)
		from 
		<include refid="tableName"></include>
		where IMEI_ID = #{IMEI_ID} AND AWARD_TYPE='2'
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			AWARD_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<select id="findAwardCountByUserId" parameterType="String" resultType="pd">
		SELECT l.USER_ID, 
			IFNULL(sum(l.AWARD_NUM),0) as AWARDSUM,
		    COUNT(l.USER_ID) as AWARDCOUNT 
		FROM SYS_APP_USER_AWARD_LIST l 
			where l.CODE_ID=(SELECT c.CODE_ID from SYS_APP_USER_CODE c where c.USER_ID=#{userId} AND c.CODE_TYPE='1' )
			AND l.AWARD_TYPE='2'
			GROUP BY l.USER_ID
	</select>

</mapper>